<% layout("layouts/boilerplate") -%>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(listing of allListings) { %>
        <a href="/listings/<%= listing._id %>">
            <div class="card col mt-2">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <h4> <%= listing.title %></h4>
                    <p class="card-text">
                       <%= listing.description %> <br>
                       <!-- <b> ₹ <%= listing.price.toLocaleString("en-IN") %> / night </b> -->
                       <span class="badge text-bg-danger mt-1"><b> ₹ <%= listing.price.toLocaleString("en-IN") %> / night </b></span>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
