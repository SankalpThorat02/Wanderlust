<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="card col-8 offset-2">
        <h3> <%= listing.title %> </h3>
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-img">
        <div class="card-body">
            <h4 class="text-danger mt-2"> â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night </h4>
            <p class="card-text"> <%= listing.description %> </p>
            <p class="card-text"> <i class="fa-solid fa-location-dot"></i> <%= listing.location %> , <%= listing.country %> </p>
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark"> Edit Listing </a>
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" style="display: inline;">
                <button class="btn btn-danger ms-2"> Delete Listing </button>
            </form>
        </div>
    </div>
</div>



    

